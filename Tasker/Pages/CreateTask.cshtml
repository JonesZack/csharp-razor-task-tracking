@page "/create-task"
@model Tasker.Pages.CreateTaskModel
@{
    <h1>New Task</h1>
    <form method="post" asp-page="CreateTask">
        <label asp-for="NewTask.Title">Title</label>
        <input type="text" asp-for="NewTask.Title" />
        <br />
        <label asp-for="NewTask.Description">Description</label>
        <input type="text" asp-for="NewTask.Description" />
        <br />
        <label asp-for="NewTask.Priority">Priority</label>
        <input type="text" asp-for="NewTask.Priority" />
        <br />
        <input type="submit" />
    </form>
}
